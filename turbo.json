{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"],
      "env": [
        "DATABASE_URL",
        "NEXTAUTH_URL",
        "NEXTAUTH_SECRET",
        "OPENAI_API_KEY",
        "AUTH_URL",
        "AUTH_SECRET",
        "AUTH_GITHUB_SECRET",
        "AUTH_GITHUB_ID",
        "AUTH_GITHUB_APP_ID",
        "AUTH_GITHUB_APP_CLIENT_ID",
        "AUTH_GITHUB_APP_SECRET",
        "AUTH_GITHUB_APP_PRIVATE_KEY",
        "PUSHER_APP_ID",
        "PUSHER_KEY",
        "PUSHER_SECRET",
        "PUSHER_CLUSTER",
        "DISCORD_WEBHOOK",
        "ENGINE_URL",
        "GITHUB_PAT",
        "NEXT_PUBLIC_PUSHER_KEY",
        "NEXT_PUBLIC_PUSHER_CLUSTER"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["^build"]
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "type-check": {
      "dependsOn": ["^build"]
    },
    "db:generate": {
      "cache": false
    }
  }
}
