generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider   = "postgresql"
  url        = env("DATABASE_URL")
  extensions = [vector]
}

// === Auth ===

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  emailVerified DateTime?
  name          String?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Polar.sh subscription
  polarCustomerId    String?   @unique
  polarSubscriptionId String?
  subscriptionStatus String?   @default("free") // free, active, canceled
  subscribedAt       DateTime?

  accounts              Account[]
  sessions              Session[]
  plexusMember          PlexusMember[]
  comments              Comment[]
  githubAppInstallations GitHubAppInstallation[]

  @@map("users")
}

model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model GitHubAppInstallation {
  installationId Int      @id
  userId         String
  accountLogin   String // GitHub org or user login
  accountType    String // "Organization" or "User"
  accountId      Int // GitHub account ID
  suspended      Boolean  @default(false)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("github_app_installations")
}

// === Plexus ===

model Plexus {
  id        String   @id @default(cuid())
  name      String
  slug      String   @unique
  createdAt DateTime @default(now())

  members       PlexusMember[]
  repos         Repo[]
  weaves        Weave[]
  discoveryRuns WeaveDiscoveryRun[]

  @@map("plexuses")
}

model PlexusMember {
  userId   String
  plexusId String
  role     String @default("MEMBER")

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  plexus Plexus @relation(fields: [plexusId], references: [id], onDelete: Cascade)

  @@id([userId, plexusId])
  @@map("plexus_members")
}

// === Repositories ===

model Repo {
  id             String    @id @default(cuid())
  plexusId       String
  name           String
  fullName       String
  url            String
  defaultBranch  String    @default("main")
  lastIndexed    DateTime?
  lastCommitSha  String?   // SHA of last processed commit (for delta sync)
  createdAt      DateTime  @default(now())

  plexus            Plexus                 @relation(fields: [plexusId], references: [id], onDelete: Cascade)
  files             File[]
  syncJobs          RepoSyncJob[]
  chunkSyncJobs     ChunkSyncJob[]
  sourceWeaves      Weave[]                @relation("SourceRepo")
  targetWeaves      Weave[]                @relation("TargetRepo")
  glossary          RepoGlossary?
  dependencyProfile RepoDependencyProfile?

  @@unique([plexusId, fullName])
  @@map("repos")
}

model File {
  id            String   @id @default(cuid())
  repoId        String
  path          String
  content       String?  // file content (nullable for binary/large files)
  sha           String   // git blob sha
  size          Int      // file size in bytes
  encoding      String?  // utf-8, binary, etc.
  skippedReason String?  // why content was skipped (too_large, binary, etc.)
  language      String?  // detected language
  loc           Int?     // lines of code
  lastChunkedSha String? // SHA when chunks were last created (skip re-chunking if unchanged)
  updatedAt     DateTime @updatedAt

  repo   Repo    @relation(fields: [repoId], references: [id], onDelete: Cascade)
  chunks Chunk[]

  @@unique([repoId, path])
  @@map("files")
}

// === Sync Jobs ===

model RepoSyncJob {
  id             String        @id @default(cuid())
  repoId         String
  status         SyncJobStatus @default(PENDING)
  totalFiles     Int?          // Set after tree fetch
  processedFiles Int           @default(0)
  skippedFiles   Int           @default(0)
  failedFiles    Int           @default(0)
  error          String?       // Error message if failed
  config         Json?         // Config options (maxFiles, skipContent, etc.)
  startedAt      DateTime?
  completedAt    DateTime?
  createdAt      DateTime      @default(now())

  repo     Repo          @relation(fields: [repoId], references: [id], onDelete: Cascade)
  fileJobs FileSyncJob[]

  @@index([status, createdAt])
  @@index([repoId, createdAt])
  @@map("repo_sync_jobs")
}

enum SyncJobStatus {
  PENDING
  FETCHING_TREE
  PROCESSING_FILES
  COMPLETED
  FAILED
  CANCELLED
}

model FileSyncJob {
  id          String        @id @default(cuid())
  syncJobId   String
  repoId      String
  path        String
  sha         String        // Git blob SHA
  size        Int           // File size in bytes
  status      FileJobStatus @default(PENDING)
  skipReason  String?       // Why content was skipped (binary, too_large, etc.)
  error       String?
  processedAt DateTime?
  createdAt   DateTime      @default(now())

  syncJob RepoSyncJob @relation(fields: [syncJobId], references: [id], onDelete: Cascade)

  @@index([syncJobId, status])
  @@index([repoId, path])
  @@map("file_sync_jobs")
}

enum FileJobStatus {
  PENDING
  PROCESSING
  COMPLETED
  SKIPPED
  FAILED
}

// === GitHub Rate Limiting ===

model GitHubRateLimit {
  id             String   @id @default(cuid())
  installationId Int      @unique
  remaining      Int
  limit          Int
  resetAt        DateTime
  updatedAt      DateTime @updatedAt

  @@map("github_rate_limits")
}

// === Embeddings ===

model Chunk {
  id         String                       @id @default(cuid())
  fileId     String
  content    String
  startChar  Int                          // Character offset from start of file
  endChar    Int                          // End character offset
  chunkIndex Int                          // 0-based index within file
  tokenCount Int?                         // Approximate token count
  embedding  Unsupported("vector(3072)")? // text-embedding-3-large (nullable until embeddings generated)
  embeddedAt DateTime?                    // When embedding was generated
  createdAt  DateTime                     @default(now())

  file File @relation(fields: [fileId], references: [id], onDelete: Cascade)

  @@index([fileId])
  // Note: pgvector index created manually via SQL (ivfflat or hnsw) - Prisma doesn't support vector indexes
  @@map("chunks")
}

// === Chunk Sync Jobs ===

model ChunkSyncJob {
  id                  String          @id @default(cuid())
  repoId              String
  status              ChunkJobStatus  @default(PENDING)
  totalFiles          Int?            // Files with content to process
  processedFiles      Int             @default(0)
  chunksCreated       Int             @default(0)
  embeddingsGenerated Int             @default(0)
  skippedFiles        Int             @default(0)
  failedFiles         Int             @default(0)
  error               String?         // Error message if failed
  config              Json?           // { chunkSize, overlap }
  startedAt           DateTime?
  completedAt         DateTime?
  createdAt           DateTime        @default(now())

  repo Repo @relation(fields: [repoId], references: [id], onDelete: Cascade)

  @@index([status, createdAt])
  @@index([repoId, createdAt])
  @@map("chunk_sync_jobs")
}

enum ChunkJobStatus {
  PENDING
  CHUNKING
  EMBEDDING
  COMPLETED
  FAILED
  CANCELLED
}

// === Weaves ===

model Weave {
  id              String             @id @default(cuid())
  plexusId        String
  sourceRepoId    String
  targetRepoId    String
  discoveryRunId  String?
  type            WeaveType
  title           String             // "Shared auth implementation"
  description     String             // AI-generated explanation
  score           Float              // similarity score
  metadata        Json?              // File pairs, chunk matches, and other details
  dismissed       Boolean            @default(false)
  createdAt       DateTime           @default(now())

  plexus       Plexus             @relation(fields: [plexusId], references: [id], onDelete: Cascade)
  sourceRepo   Repo               @relation("SourceRepo", fields: [sourceRepoId], references: [id], onDelete: Cascade)
  targetRepo   Repo               @relation("TargetRepo", fields: [targetRepoId], references: [id], onDelete: Cascade)
  discoveryRun WeaveDiscoveryRun? @relation(fields: [discoveryRunId], references: [id], onDelete: SetNull)
  comments     Comment[]

  @@index([plexusId, createdAt])
  @@index([discoveryRunId])
  @@map("weaves")
}

enum WeaveType {
  shared_module // building the same thing separately
  integration_opportunity
  shared_dependency
  api_compatibility
  refactor_candidate
  philosophical_alignment // repos that share worldview/approach even if functionally different
  glossary_alignment // repos with aligned vocabulary, beliefs, resentments
  dependency_profile // repos with similar dependency profiles and tech stacks
}

model Comment {
  id        String   @id @default(cuid())
  weaveId   String
  userId    String
  content   String
  createdAt DateTime @default(now())

  weave Weave @relation(fields: [weaveId], references: [id], onDelete: Cascade)
  user  User  @relation(fields: [userId], references: [id])

  @@index([weaveId, createdAt])
  @@map("comments")
}

// === Weave Discovery Runs ===

model WeaveDiscoveryRun {
  id                    String                 @id @default(cuid())
  plexusId              String
  status                WeaveDiscoveryStatus   @default(RUNNING)
  config                Json?                  // Threshold, options, etc.
  repoPairsTotal        Int                    @default(0)
  repoPairsChecked      Int                    @default(0)
  currentSourceRepoName String?                // Name of source repo being checked
  currentTargetRepoName String?                // Name of target repo being checked
  candidatesFound       Int                    @default(0)
  weavesSaved           Int                    @default(0)
  weavesSkipped         Int                    @default(0)
  error                 String?
  logs                  Json?                  // Detailed logs for debugging
  startedAt             DateTime               @default(now())
  completedAt           DateTime?

  plexus Plexus  @relation(fields: [plexusId], references: [id], onDelete: Cascade)
  weaves Weave[]

  @@index([plexusId, startedAt])
  @@map("weave_discovery_runs")
}

enum WeaveDiscoveryStatus {
  RUNNING
  COMPLETED
  FAILED
}

// === Repo Glossaries ===

model RepoGlossary {
  id        String   @id @default(cuid())
  repoId    String   @unique

  // Core dimensions - the soul of a codebase made legible
  terms         Json     // { term, definition, context, emotionalValence }[]
  empirics      Json     // { measures, evidenceTypes, truthClaims, uncertainties }
  psychology    Json     // { fears, confidences, defenses, attachments, blindSpots }
  poetics       Json     // { metaphors, namingPatterns, aesthetic, rhythm, voice }
  philosophy    Json     // { beliefs, assumptions, virtues, epistemology, ontology, teleology }
  resentments   Json     // { hates, definesAgainst, allergies, warnings, enemies }
  futureVision  String?  // What would a historian in 2500 say about this repo?

  // Status
  status            GlossaryStatus @default(PENDING)
  unglossableReason String?        // Why extraction was skipped (if unglossable)
  confidence        Float?
  extractedAt       DateTime?

  repo Repo @relation(fields: [repoId], references: [id], onDelete: Cascade)

  @@map("repo_glossaries")
}

enum GlossaryStatus {
  PENDING
  EXTRACTING
  COMPLETE
  UNGLOSSABLE
  FAILED
}

// === Repo Dependency Profiles ===

enum DependencyProfileStatus {
  PENDING
  EXTRACTING
  COMPLETE
  FAILED
  NO_MANIFESTS // repo has no recognizable dependency files
}

model RepoDependencyProfile {
  id     String @id @default(cuid())
  repoId String @unique

  status    DependencyProfileStatus @default(PENDING)
  manifests Json? // DependencyManifest[] - all parsed manifests

  // Summary fields for quick queries
  primaryEcosystem   String? // 'npm' | 'pip' | 'cargo' | etc.
  dependencyCount    Int     @default(0)
  devDependencyCount Int     @default(0)
  frameworks         String[] // ['react', 'express', 'prisma']

  extractedAt DateTime?
  error       String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  repo Repo @relation(fields: [repoId], references: [id], onDelete: Cascade)

  @@map("repo_dependency_profiles")
}
